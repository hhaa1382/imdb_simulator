<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Pages.LoginPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGIN"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/standard_margin_size"
        android:textSize="24sp"
        android:fontFamily="@font/artbrush"
        android:textColor="@color/red"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Username :"
        android:textSize="26sp"
        android:id="@+id/login_person_username_text"
        android:fontFamily="@font/dm_serif_display_italic"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/login_person_username"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/login_person_username_text"
        android:layout_marginStart="150dp"
        android:background="@color/gray"
        android:fontFamily="@font/dm_serif_display_italic"
        android:hint="username"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_person_username_text"
        android:layout_marginTop="100dp"
        android:text="Password :"
        android:textSize="26sp"
        android:id="@+id/login_person_password_text"
        android:fontFamily="@font/dm_serif_display_italic"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/login_person_password_text"
        android:layout_marginStart="150dp"
        android:hint="password"
        android:id="@+id/login_person_password"
        android:fontFamily="@font/dm_serif_display_italic"
        android:textColorHint="@color/white"
        android:background="@color/gray"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="100dp"
        android:layout_below="@id/login_person_password_text"
        android:gravity="center_horizontal"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="26sp"
            android:textAllCaps="false"
            android:id="@+id/login"
            android:fontFamily="@font/artbrush"
            android:textColor="@color/white"
            android:background="@color/gray"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="Back"
            android:textSize="26sp"
            android:textAllCaps="false"
            android:id="@+id/login_back"
            android:fontFamily="@font/artbrush"
            android:textColor="@color/white"
            android:background="@color/gray"
            />

    </LinearLayout>

</RelativeLayout>