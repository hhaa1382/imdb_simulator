<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Pages.SignUpPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:layout_marginTop="@dimen/standard_margin_size"
        android:fontFamily="@font/artbrush"
        android:id="@+id/sign_up_edit_text"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="@color/red"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_edit_text"
        android:text="Name :"
        android:textSize="26sp"
        android:layout_marginTop="50dp"
        android:id="@+id/sign_up_person_name_text"
        android:fontFamily="@font/dm_serif_display_italic"
        android:textColor="@color/white"
        />

    <EditText
        android:id="@+id/sign_up_person_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sign_up_person_name_text"
        android:layout_marginStart="150dp"
        android:background="@color/gray"
        android:fontFamily="@font/dm_serif_display_italic"
        android:hint="name"
        android:textColorHint="@color/white"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_person_name_text"
        android:layout_marginTop="50dp"
        android:text="Phone :"
        android:textSize="26sp"
        android:id="@+id/sign_up_person_phone_text"
        android:fontFamily="@font/dm_serif_display_italic"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/sign_up_person_phone"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sign_up_person_phone_text"
        android:layout_marginStart="150dp"
        android:hint="phone"
        android:fontFamily="@font/dm_serif_display_italic"
        android:textColorHint="@color/white"
        android:background="@color/gray"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_person_phone_text"
        android:layout_marginTop="50dp"
        android:text="Email :"
        android:textSize="26sp"
        android:id="@+id/sign_up_person_email_text"
        android:fontFamily="@font/dm_serif_display_italic"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sign_up_person_email_text"
        android:layout_marginStart="150dp"
        android:hint="email"
        android:id="@+id/sign_up_person_email"
        android:fontFamily="@font/dm_serif_display_italic"
        android:textColorHint="@color/white"
        android:background="@color/gray"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_person_email_text"
        android:layout_marginTop="50dp"
        android:text="Username :"
        android:textSize="26sp"
        android:id="@+id/sign_up_person_username_text"
        android:fontFamily="@font/dm_serif_display_italic"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sign_up_person_username_text"
        android:layout_marginStart="150dp"
        android:hint="username"
        android:id="@+id/sign_up_person_username"
        android:fontFamily="@font/dm_serif_display_italic"
        android:textColorHint="@color/white"
        android:background="@color/gray"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_up_person_username_text"
        android:layout_marginTop="50dp"
        android:text="Password :"
        android:textSize="26sp"
        android:id="@+id/sign_up_person_password_text"
        android:fontFamily="@font/dm_serif_display_italic"
        android:textColor="@color/white"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/sign_up_person_password_text"
        android:layout_marginStart="150dp"
        android:hint="password"
        android:id="@+id/sign_up_person_password"
        android:fontFamily="@font/dm_serif_display_italic"
        android:textColorHint="@color/white"
        android:background="@color/gray"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_below="@id/sign_up_person_password_text"
        android:gravity="center_horizontal"
        >

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:textSize="26sp"
            android:textAllCaps="false"
            android:id="@+id/sign_up"
            android:background="@color/gray"
            android:fontFamily="@font/artbrush"
            android:textColor="@color/white"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:text="Back"
            android:textSize="26sp"
            android:textAllCaps="false"
            android:id="@+id/sign_up_back"
            android:background="@color/gray"
            android:fontFamily="@font/artbrush"
            android:textColor="@color/white"
            />

    </LinearLayout>

</RelativeLayout>